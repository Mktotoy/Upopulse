<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/Titre_create_event"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:scaleType="center"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="@color/ColorPrimaryDark"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nomEvent"
        android:text="Nom de l&apos;événement" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/descEvent"
        android:text="Description de l&apos;événement" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateDebutEvent"
        android:text="Date de début de l&apos;événement" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heureDebutEvent"
        android:text="Heure de début de l&apos;événement" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateFinEvent"
        android:text="Date de fin de l&apos;événement" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heureFinEvent"
        android:text="Heure de fin de l&apos;événement" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lieuEvent"
        android:text="Lieu de l&apos;événement" />

</LinearLayout>